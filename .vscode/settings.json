{
  // Language-specific Biome formatters
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[sql]": {
    "editor.defaultFormatter": "inferrinizzard.prettier-sql-vscode"
  },
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },

  // Biome configuration
  "biome.enabled": true,
  "biome.lsp.bin": "node_modules/@biomejs/biome/bin/biome",

  // Editor settings
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "editor.defaultFormatter": "biomejs.biome",
  "editor.codeActionsOnSave": {
    "quickfix.biome": "always",
    "source.fixAll.format": "always",
    "source.organizeImports.biome": "always",
    "source.removeUnusedImports": "always",
    "source.addMissingImports": "always"
  },
  "editor.rulers": [80, 120],
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.linkedEditing": true,

  // TailwindCSS configuration
  "tailwindCSS.experimental.classRegex": [
    "twc\\.[^`]+`([^`]*)`",
    "twc\\(.*?\\).*?`([^`]*)",
    ["twc\\.[^`]+\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["twc\\(.*?\\).*?\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    "twx\\.[^`]+`([^`]*)`",
    "twx\\(.*?\\).*?`([^`]*)",
    ["twx\\.[^`]+\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["twx\\(.*?\\).*?\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.files.exclude": [
    "**/.git/**",
    "**/node_modules/**",
    "**/.hg/**",
    "**/.svn/**",
    "**/.next/**"
  ],
  "tailwindCSS.validate": true,

  // File associations
  "files.associations": {
    "*.css": "tailwindcss",
    "*.scss": "tailwindcss"
  },
  "files.trimTrailingWhitespace": true,

  // CSS Variables
  "cssVariables.lookupFiles": [
    "**/*.css",
    "**/*.scss",
    "**/*.sass",
    "**/*.less",
    "node_modules/@mantine/core/styles.css"
  ],

  // TypeScript
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.referencesCodeLens.enabled": true,
  "typescript.autoClosingTags": true,
  "typescript.preferences.renameMatchingJsxTags": true,
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",

  // JavaScript
  "javascript.autoClosingTags": true,
  "javascript.preferences.renameMatchingJsxTags": true,
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",

  // HTML
  "html.autoClosingTags": true,

  // Emmet
  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": "javascriptreact"
  },

  // Workbench
  "workbench.editor.customLabels.patterns": {
    "**/app/**/page.tsx": "${dirname} - page",
    "**/app/**/layout.tsx": "${dirname} - layout",
    "**/app/**/route.ts": "${dirname} - route",
    "**/components/**/index.tsx": "${dirname} - component",
    "**/_components/**/index.tsx": "${dirname} - component"
  },

  // i18n Ally
  "i18n-ally.localesPaths": ["./messages"],
  "i18n-ally.enabledFrameworks": ["next-intl"],
  "i18n-ally.editor.preferEditor": true,
  "i18n-ally.keystyle": "nested",
  "i18n-ally.sourceLanguage": "en",
  "i18n-ally.sortKeys": true,
  "i18n-ally.keepFulfilled": true,
  "i18n-ally.defaultNamespace": "Common",
  "i18n-ally.extract.autoDetect": true,
  "i18n-ally.extract.keyMaxLength": 40
}
